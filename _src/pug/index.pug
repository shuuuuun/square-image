extends layout/_default

prepend ConfigBlock
  - page_name = ''

block ContentBlock
  h1.title= title
  div.option
    label
      | output size(px): 
      input.js-input-size(type="number" step="10" min="0")
    label
      | background color: 
      input.js-input-color(type="color")
  div.select
    input.js-input-image(type="file" accept="image/*")
  canvas.canvas.js-canvas
  div.preview.js-preview
